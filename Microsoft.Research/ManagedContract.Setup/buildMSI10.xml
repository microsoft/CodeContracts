      DisplayUrl="$(CodeSignCodeContractsUrl)"
      Keywords="$(CodeSignKeywords)"
      Files="$(Adornment2010UnpackDir)\$(AdornmentBinary)"
      OutputPath="$(Adornment2010UnpackDir)"
