      $(CCI2Dir)\Microsoft.Cci.AstsProjectedAsCodeModel.dll;
      $(CCI2Dir)\Microsoft.Cci.CodeModel.dll;
      $(CCI2Dir)\Microsoft.Cci.CodeModelToIL.dll;
      $(CCI2Dir)\Microsoft.Cci.ContractExtractor.dll;
