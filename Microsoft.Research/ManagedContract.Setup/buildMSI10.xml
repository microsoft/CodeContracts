      $(CCI2Dir)\Microsoft.Cci.SourceModel.dll;
      $(CCI2Dir)\Microsoft.Cci.VBSourceEmitter.dll;
    "/>
    <Clousot1MergeBinaries Include="
      $(Clousot1Dir)\Clousot.exe;
      $(Clousot1Dir)\CCI1CodeProvider.dll;
